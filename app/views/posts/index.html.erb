

<h1>Posts</h1>
<div class="row">
  <div class="col-md-12">
    <table>
      <thead>
        <tr>
          <th id="a">Title</th>
          <th id="b">Content</th>
          <th id="c">Action</th>
        </tr>
      </thead>

      <tbody>
        <% @posts.each do |post| %>
          <tr>
            <td><%= post.title %></td>
            <td><%= post.content %></td>
            <td><%= link_to 'Show', post, class: "btn btn-success btn-md" %>
            <% if current_user == post.user %>
              <%= link_to 'Edit', edit_post_path(post), class: "btn btn-info btn-md" %>
            <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-warning btn-md" %></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<br>
<div class="row">

<%= link_to 'New Post', new_post_path, class: "btn btn-success btn-lg", style: "text-align:center;" %>
</div>
